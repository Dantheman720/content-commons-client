{
  "name": "client",
  "version": "3.0.0",
  "description": "Content Commons Client",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "npm run build && npm run start"
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,json}": "eslint"
    },
    "ignore": [
      "node_modules/**/*.{js,json}",
      ".next/**/*.{js,json}",
      "package*.json"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "apollo-boost": "^0.1.23",
    "apollo-client": "^2.4.8",
    "axios": "^0.18.0",
    "bodybuilder": "^2.2.16",
    "dotenv": "^6.2.0",
    "file-loader": "^3.0.1",
    "formik": "^1.4.2",
    "formik-semantic-ui": "^0.9.0",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "html-react-parser": "^0.6.1",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.11",
    "lscache": "^1.3.0",
    "moment": "^2.23.0",
    "next": "^7.0.2",
    "next-redux-wrapper": "^2.1.0",
    "next-with-apollo": "^3.3.1",
    "node-sass": "^4.11.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.7.0",
    "react-google-login": "^4.0.1",
    "react-markdown": "^4.0.6",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "semantic-ui-react": "^0.84.0",
    "semantic-ui-sass": "^2.3.1",
    "url-loader": "^1.1.2",
    "uuid": "^3.3.2",
    "yup": "^0.26.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-graphql-tag": "^1.6.0",
    "babel-plugin-module-resolver": "^3.1.3",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2"
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "module-resolver",
            {
              "root": "./",
              "alias": {
                "components": "./components",
                "hocs": "./hocs",
                "lib": "./lib",
                "static": "./static",
                "styles": "./styles"
              }
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": []
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": []
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
